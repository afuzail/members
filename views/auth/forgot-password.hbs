<section id="login_page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 bg-image image"></div>
            <div class="col-md-6 col-lg-6 login">
                <div class="login  d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 col-lg-8 mx-auto">
                                <div class="g-text-center--xs g-margin-b-30--xs">
                                    <h2 class="g-font-size-30--xs g-color--dark">Forgot your password?</h2>
                                </div>
                                <div id="errors-area">
                                    {{#if error_msg}}
                                    <div class="alert alert-danger">{{error_msg}}</div>
                                    {{/if}}

                                    {{#if errors}}
                                    <div class="alert alert-danger">{{errors}}</div>
                                    {{/if}}

                                    {{#if success_msg}}
                                    <div class="alert alert-success">{{success_msg}}</div>
                                    {{/if}}
                                </div>

                                <form action="/forgot-password" method="POST" id="forgot_password_frm">
                                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                    <div class="g-margin-b-20--xs">
                                        <label for="email" class="sr-only">Email</label>
                                        <input type="email" name="email" id="email"
                                            class="form-control s-form-v4__input" placeholder="* Email" autocomplete="off">
                                    </div>
                                    
                                    <button type="submit" name="auth_forgot_password_submit" id="auth_forgot_password_submit"
                                        class="text-uppercase btn-block s-btn s-btn--md s-btn--primary-bg g-radius--50 g-padding-x-50--xs g-margin-b-20--xs">Reset password</button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>



<script src="/javascripts/forgot-password.js"></script>