<section id="signup_page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 bg-image image"></div>
            <div class="col-md-6 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 col-lg-8 mx-auto">
                                <h3>SIGN UP</h3>
                                <div id="errors-area">
                                    {{#if error_msg}}
                                        <div class="alert alert-danger">{{error_msg}}</div>
                                    {{/if}}

                                    {{#if success_msg}}
                                        <div class="alert alert-success">{{success_msg}}</div>
                                    {{/if}}
                                </div>
                                <form action="/signup" method="POST" id="signup_frm">
                                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                    <div class="form-group">
                                        <label for="name"  class="sr-only">Name</label>
                                        <input type="name" name="name" id="name" class="form-control form-control-lg"
                                            placeholder="Name" value="{{name}}">
                                    </div>

                                    <div class="form-group">
                                        <label for="email"  class="sr-only">Email</label>
                                        <input type="email" name="email" id="email" class="form-control form-control-lg"
                                            placeholder="Email" value="{{email}}">
                                    </div>

                                    <div class="form-group">
                                        <label for="password"  class="sr-only">Password</label>
                                        <input type="password" name="password" id="password"
                                            class="form-control form-control-lg" placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" name="auth_signup_submit" id="auth_signup_submit"
                                            class="btn btn-primary btn-lg">Signup</button>
                                    </div>


                                    <section class="signup_section">
                                        <a href="/login">Already have account? <b>Login</b></a>
                                    </section>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>

<script src="/javascripts/signup.js"></script>